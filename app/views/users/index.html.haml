%h1 Listing users
%table
  %tr
    %th Username
    %th Email
    %th First Name
    %th Last Name
  - @users.each do |user|
    %tr
      %td= user.username
      %td= user.email
      %td= user.first_name
      %td= user.last_name
      %td
        - if current_user == user || current_user_admin?
          = link_to 'Edit', edit_user_path(user)
      %td
        - if current_user_admin?
          = link_to 'Destroy', user_path(user), :confirm => 'Are you sure?', data: { "turbo-method": :delete }
%br/
= link_to 'New user', new_user_path
