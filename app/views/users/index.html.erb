<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td>
        <% if current_user == user || current_user_admin? %>
          <%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
      <td>
        <% if current_user_admin? %>
          <%= link_to 'Destroy', user_path(user), :confirm => 'Are you sure?', data: { "turbo-method": :delete }%>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

