%h1 Listing roles
%table
  %tr
    %th name
    %th description
  - @roles.each do |role|
    %tr
      %td= role.name
      %td= role.description
      %td
        - if current_user_admin?
          = link_to 'Edit', edit_role_path(role)
      %td
        - if current_user_admin?
          = link_to 'Destroy', role_path(role), :confirm => 'Are you sure?', data: { "turbo-method": :delete }
%br/
= link_to 'New Role', new_role_path
