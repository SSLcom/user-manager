<h1>Listing teams</h1>

<table>
  <tr>
    <th>name</th>
    <th>description</th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.description %></td>
      <td>
        <% if current_user_admin? %>
          <%= link_to 'Edit', edit_team_path(team) %></td>
        <% end %>
        <td>
          <% if current_user_admin? %>
            <%= link_to 'Destroy', team_path(team), :confirm => 'Are you sure?', data: { "turbo-method": :delete }%>
          <% end %>
        </td>
        </tr>
  <% end %>
</table>

<br />

<%= link_to 'New team', new_team_path %>
